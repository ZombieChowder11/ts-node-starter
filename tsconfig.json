{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "build",
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "include": [
    "src",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}